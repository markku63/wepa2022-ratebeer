<div id="<%= dom_id beer %>">
  <p>
    <strong>Name:</strong>
    <%= beer.name %>
  </p>

  <p>
    <strong>Style:</strong>
    <%= link_to beer.style.name, beer.style %>
  </p>

  <p>
    <strong>Brewery:</strong>
    <%= link_to beer.brewery.name, beer.brewery %>
  </p>

  <p>
    Beer has 
    <% if beer.ratings.empty? %>
      not yet been rated!
    <% else %>
      <%= pluralize(beer.ratings.count, 'rating') %>
      with an average of
      <%= round(beer.average_rating) %>
    <% end %>
  </p>

</div>
